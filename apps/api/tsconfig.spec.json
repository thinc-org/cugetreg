{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@api/*": ["./src/*"]
    },
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": [
    "jest.config.ts",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx",
    "**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
