{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/scraper/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/scraper",
        "main": "apps/scraper/src/main.ts",
        "tsConfig": "apps/scraper/tsconfig.app.json",
        "generatePackageJson": true,
        "target": "node",
        "compiler": "tsc"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "scraper:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "scraper:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/scraper/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/scraper"],
      "options": {
        "jestConfig": "apps/scraper/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "tags": ["ghcr.io/thinc-org/cugetreg-scraper:latest"]
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "nx run scraper:build",
            "forwardAllArgs": false
          },
          {
            "command": "cp pnpm-lock.yaml dist/apps/scraper/pnpm-lock.yaml",
            "forwardAllArgs": false
          },
          {
            "command": "cp .npmrc dist/apps/scraper/.npmrc",
            "forwardAllArgs": false
          },
          {
            "command": "nx run scraper:docker --push=false --tags=cugetreg-scraper:latest --load",
            "forwardAllArgs": false
          }
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
