{
  "extends": "@cgr/project-config/tsconfig/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@web/*": ["./src/*"]
    },
    "experimentalDecorators": true
  },
  "include": [
    "vitest.config.mts",
    "test-setup.mjs",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx",
    "**/*.test.js",
    "**/*.spec.js",
    "**/*.test.jsx",
    "**/*.spec.jsx",
    "**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
