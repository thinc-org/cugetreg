{
  "extends": "@cgr/config/tsconfig/svelte",
  "compilerOptions": {
    "types": ["svelte"],
    "paths": {
      "$lib": ["./src"],
      "$lib/*": ["./src/*"]
    }
  },
  "include": [
    "./src/app.d.ts",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.svelte",
    "./tests/**/*.js",
    "./tests/**/*.ts",
    "./tests/**/*.svelte"
  ],
  "exclude": ["node_modules"]
}
